<%- include("partials/header"); -%>
<div class="container" id="blogs">
    <h1>Compose</h1>
<form action="/compose" method="POST">
    <!-- <input type="text" name="blogtext"> -->
    <div class="form-group">
        <label for="exampleTitle">Title</label>
        <input type="text" class="form-control" name="blogtitle" id="exampleTitle"  placeholder="Enter Title" autocomplete="off" required>
      
    </div>
    <div class="form-group">
        <label for="examplePost">Post</label>
        <textarea type="textarea" class="form-control" name="blogcontent" id="examplePost" cols="40" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>
</div>
</section>

